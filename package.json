{
  "name": "es6-node-express-server-starter-kit",
  "version": "1.0.0",
  "description": "ES6 Express Node web server simple starter kit",
  "main": "index.js",
  "author": "Davide Palazzo <davide@revengecreative.com>",
  "license": "MIT",
  "keywords": [
    "node",
    "es6",
    "express",
    "routing",
    "server",
    "nodemon",
    "eslint",
    "babel",
    "pm2",
    "yarn"
  ],
  "scripts": {
    "start": "yarn dev:start",
    "dev:start": "nodemon --ignore lib/ --exec babel-node src/server",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src",
    "prod-build": "rimraf lib && babel-node src -d lib",
    "prod-start": "NODE_ENV=production pm2 start lib/server && pm2 logs",
    "prod-stop": "pm2 delete server"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.10.5",
    "@babel/node": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "babel-eslint": "^10.1.0",
    "eslint": "7.5.0",
    "nodemon": "^2.0.4",
    "rimraf": "^3.0.2"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "pm2": "^4.4.0"
  }
}
